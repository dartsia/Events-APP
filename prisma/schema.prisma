generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  username  String
  email String @unique
  password String

  participants Participant[]
}

model Event {
  id    Int    @id @default(autoincrement())
  name  String
  description String
  date DateTime
  location String
  maxParticipants Int

  participants Participant[]
}

model Participant {
  id Int    @id @default(autoincrement())
  event   Event   @relation(fields: [eventId], references: [id])
  eventId Int
  user   User   @relation(fields: [userId], references: [id])
  userId Int    
}
